{
    "name": "transformer",
    "displayName": "Transformer",
    "description": "Filter, Sort, Unique, Reverse, Align, CSV, Line Selection and more text Transformations",
    "version": "1.12.1",
    "icon": "transformer-icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/dakaraphi/vscode-extension-transformer"
    },
    "publisher": "dakara",
    "engines": {
        "vscode": "^1.58.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:dakara-internal.command",
        "onCommand:dakara-transformer.JsonAsText",
        "onCommand:dakara-transformer.alignCSV",
        "onCommand:dakara-transformer.alignCursor",
        "onCommand:dakara-transformer.alignAll",
        "onCommand:dakara-transformer.alignWhitespace",
        "onCommand:dakara-transformer.alignFirst",
        "onCommand:dakara-transformer.commands",
        "onCommand:dakara-transformer.compactCSV",
        "onCommand:dakara-transformer.copyToNewDocument",
        "onCommand:dakara-transformer.countUniqueLinesNewDocument",
        "onCommand:dakara-transformer.escapes",
        "onCommand:dakara-transformer.filter",
        "onCommand:dakara-transformer.filterAsNewDocument",
        "onCommand:dakara-transformer.joinLines",
        "onCommand:dakara-transformer.linesAsJSON",
        "onCommand:dakara-transformer.macroCreate",
        "onCommand:dakara-transformer.macroDelete",
        "onCommand:dakara-transformer.macroEdit",
        "onCommand:dakara-transformer.macroRepeat",
        "onCommand:dakara-transformer.macroRun",
        "onCommand:dakara-transformer.normalizeDiacriticalMarks",
        "onCommand:dakara-transformer.randomLines",
        "onCommand:dakara-transformer.randomSelections",
        "onCommand:dakara-transformer.reverseLines",
        "onCommand:dakara-transformer.reverseSelections",
        "onCommand:dakara-transformer.rotateBackwardSelections",
        "onCommand:dakara-transformer.rotateForwardSelections",
        "onCommand:dakara-transformer.selectHighlights",
        "onCommand:dakara-transformer.selectLines",
        "onCommand:dakara-transformer.selectionAsJSON",
        "onCommand:dakara-transformer.sortByLineLength",
        "onCommand:dakara-transformer.sortLines",
        "onCommand:dakara-transformer.sortSelections",
        "onCommand:dakara-transformer.splitLines",
        "onCommand:dakara-transformer.splitLinesBeforeDelimiter",
        "onCommand:dakara-transformer.splitLinesAfterDelimiter",
        "onCommand:dakara-transformer.trimLines",
        "onCommand:dakara-transformer.trimSelections",
        "onCommand:dakara-transformer.uniqueLines",
        "onCommand:dakara-transformer.uniqueLinesNewDocument"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "dakara-transformer.sortLines",
                "title": "Sort Lines",
                "category": "Transform"
            },
            {
                "command": "dakara-transformer.sortSelections",
                "title": "Sort Selections",
                "category": "Transform"
            },
            {
                "command": "dakara-transformer.filterAsNewDocument",
                "title": "Filter Lines As New Document...",
                "category": "Transform"
            },
            {
                "command": "dakara-internal.command",
                "title": "internal use only",
                "category": "Transform-Internal"
            },
            {
                "command": "dakara-transformer.filter",
                "title": "Filter Lines...",
                "category": "Transform"
            },
            {
                "command": "dakara-transformer.reverseLines",
                "title": "Reverse Lines",
                "category": "Transform"
            },
            {
                "command": "dakara-transformer.reverseSelections",
                "title": "Reverse Selections",
                "category": "Transform"
            },
            {
                "command": "dakara-transformer.alignCursor",
                "title": "Align To Cursor",
                "category": "Transform"
            },
            {
                "command": "dakara-transformer.alignAll",
                "title": "Align To All Chars",
                "category": "Transform"
            },
            {
                "command": "dakara-transformer.alignFirst",
                "title": "Align To First Char",
                "category": "Transform"
            },
            {
                "command": "dakara-transformer.alignWhitespace",
                "title": "Align To Whitespace",
                "category": "Transform"
            },
            {
                "command": "dakara-transformer.alignCSV",
                "title": "Align CSV",
                "category": "Transform"
            },
            {
                "command": "dakara-transformer.compactCSV",
                "title": "Compact CSV",
                "category": "Transform"
            },
            {
                "command": "dakara-transformer.commands",
                "title": "List All Commands",
                "category": "Transform"
            },
            {
                "command": "dakara-transformer.uniqueLines",
                "title": "Unique Lines",
                "category": "Transform"
            },
            {
                "command": "dakara-transformer.uniqueLinesNewDocument",
                "title": "Unique Lines As New Document",
                "category": "Transform"
            },
            {
                "command": "dakara-transformer.sortByLineLength",
                "title": "Sort Lines By Length",
                "category": "Transform"
            },
            {
                "command": "dakara-transformer.countUniqueLinesNewDocument",
                "title": "Count Duplicate Lines As New Document",
                "category": "Transform"
            },
            {
                "command": "dakara-transformer.copyToNewDocument",
                "title": "Copy To New Document",
                "category": "Transform"
            },
            {
                "command": "dakara-transformer.selectLines",
                "title": "Select Full Lines (of all current selections)",
                "category": "Transform"
            },
            {
                "command": "dakara-transformer.selectHighlights",
                "title": "Select Highlights (make selections of all highlighted text)",
                "category": "Transform"
            },
            {
                "command": "dakara-transformer.linesAsJSON",
                "title": "Lines As JSON String Array",
                "category": "Transform"
            },
            {
                "command": "dakara-transformer.selectionAsJSON",
                "title": "Selection As JSON String",
                "category": "Transform"
            },
            {
                "command": "dakara-transformer.JsonAsText",
                "title": "JSON String As Text",
                "category": "Transform"
            },
            {
                "command": "dakara-transformer.trimLines",
                "title": "Trim Lines",
                "category": "Transform"
            },
            {
                "command": "dakara-transformer.trimSelections",
                "title": "Trim Selections",
                "category": "Transform"
            },
            {
                "command": "dakara-transformer.escapes",
                "title": "Encode / Decode ...",
                "category": "Transform"
            },
            {
                "command": "dakara-transformer.randomLines",
                "title": "Randomize Lines",
                "category": "Transform"
            },
            {
                "command": "dakara-transformer.randomSelections",
                "title": "Randomize Selections",
                "category": "Transform"
            },
            {
                "command": "dakara-transformer.joinLines",
                "title": "Join Lines...",
                "category": "Transform"
            },
            {
                "command": "dakara-transformer.splitLines",
                "title": "Split Lines...",
                "category": "Transform"
            },
            {
                "command": "dakara-transformer.splitLinesBeforeDelimiter",
                "title": "Split Lines Before...",
                "category": "Transform"
            },
            {
                "command": "dakara-transformer.splitLinesAfterDelimiter",
                "title": "Split Lines After...",
                "category": "Transform"
            },
            {
                "command": "dakara-transformer.rotateForwardSelections",
                "title": "Rotate Forward Selections",
                "category": "Transform"
            },
            {
                "command": "dakara-transformer.rotateBackwardSelections",
                "title": "Rotate Backward Selections",
                "category": "Transform"
            },
            {
                "command": "dakara-transformer.normalizeDiacriticalMarks",
                "title": "Normalize Diacritical Marks (remove accents)",
                "category": "Transform"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Alignment configuration",
            "properties": {
                "transformer.alignChars": {
                    "type": "object",
                    "default": {
                        ":": {
                            "spaceBefore": 0,
                            "spaceAfter": 1
                        },
                        "::": {
                            "spaceBefore": 0,
                            "spaceAfter": 0
                        },
                        "=": {
                            "spaceBefore": 1,
                            "spaceAfter": 1
                        },
                        "===": {
                            "spaceBefore": 1,
                            "spaceAfter": 1
                        },
                        "==": {
                            "spaceBefore": 1,
                            "spaceAfter": 1
                        },
                        "=>": {
                            "spaceBefore": 1,
                            "spaceAfter": 1
                        },
                        "+=": {
                            "spaceBefore": 1,
                            "spaceAfter": 1
                        },
                        "-=": {
                            "spaceBefore": 1,
                            "spaceAfter": 1
                        },
                        "*=": {
                            "spaceBefore": 1,
                            "spaceAfter": 1
                        },
                        "/=": {
                            "spaceBefore": 1,
                            "spaceAfter": 1
                        }
                    },
                    "description": "Chars to align",
                    "additionalProperties": {
                        "type": "object",
                        "properties": {
                            "spaceBefore": {
                                "type": "number",
                                "default": 0
                            },
                            "spaceAfter": {
                                "type": "number",
                                "default": 1
                            },
                            "tabsBefore": {
                                "type": "number",
                                "default": 1
                            },
                            "tabsAfter": {
                                "type": "number",
                                "default": 1
                            }
                        },
                        "additionalProperties": false
                    }
                }
            }
        },
        "menus": {
            "commandPalette": [
                {
                    "command": "dakara-internal.command",
                    "when": "false"
                }
            ],
            "editor/context": [
                {
                    "when": "editorHasSelection",
                    "command": "dakara-transformer.alignAll",
                    "group": "1_modification"
                },
                {
                    "when": "editorHasSelection",
                    "command": "dakara-transformer.alignFirst",
                    "group": "1_modification"
                },
                {
                    "when": "editorHasSelection",
                    "command": "dakara-transformer.alignWhitespace",
                    "group": "1_modification"
                }
            ]
        },
        "keybindings": [
            {
                "command": "dakara-transformer.alignAll",
                "key": "alt+=",
                "when": "editorHasSelection"
            },
            {
                "command": "dakara-transformer.alignFirst",
                "key": "alt+shift+=",
                "when": "editorHasSelection"
            },
            {
                "command": "dakara-transformer.alignWhitespace",
                "key": "alt+-",
                "when": "editorHasSelection"
            }
        ],
        "languages": [
            {
                "id": "macro",
                "aliases": [
                    "macro"
                ],
                "extensions": [
                    ".macro"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "macro",
                "scopeName": "source.macro",
                "path": "./macro.tmLanguage"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "compile_common": "tsc -watch -p ../vscode-extension-common",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/node": "^14.0.27",
        "typescript": "^3.9.7",
        "vscode": "^1.1.37"
    },
    "dependencies": {
        "md5": "2.3.0",
        "split-string": "6.1.0",
        "vscode-extension-common": "file:../vscode-extension-common"
    }
}
